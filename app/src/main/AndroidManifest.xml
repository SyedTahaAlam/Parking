<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.syedtahaalam.parkingsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".firebase"
        android:allowBackup="true"
        android:icon="@drawable/park"
        android:label="@string/app_name"
        android:roundIcon="@drawable/park"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignIn"
            android:label="@string/signIn" />
        <activity
            android:name=".SignUp"
            android:label="@string/SignUp"
            android:parentActivityName=".SignIn">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.syedtahaalam.parkingsystem.SignIn" />
        </activity>
        <activity
            android:name=".ParkingPlaces"
            android:label="@string/title_activity_parking_places"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ParkingAreas" />
        <activity android:name=".BookingDetails" />
        <activity android:name=".CancelBooking" />
        <activity android:name=".ReplyActivity" />
        <activity android:name=".Userdetails"></activity>
    </application>

</manifest>